<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Slideshow</title>
  <script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>
</head>

<body>

  <!-- container for actual page content -->
  <div class="container" id="main-content">
  </div>

  <style>
    h3 {
      margin: 0;
      padding: 1em;
      background:#222;
      color:white;
    }

    .expand {
      width:100%;
      height:90%;
    }
  </style>

  <script>

    function loadSlides(id) {
      var jqxhr = $.ajax( "http://virtus-vet.eu/src/php/widget_instances_slides.php?id=" + id )
      .done(function(data) {
        data = JSON.parse(data);
        $("#main-content").html('<h3>'+data.name+'</h3><object class="expand" data="'+data.url+'" type="application/pdf">'
          +'<iframe src="https://docs.google.com/viewer?url='+data.url+'&embedded=true"></iframe>'
          +'</object>');
      })
      .fail(function() {
          $("#main-content").html("Could not load the slides.");
      });
    }

    loadSlides(1);

    // loadContext(loadSlides, function() {$("#main-content").html("Could not load the slides.");});

    function loadContext(successCallback,errorCallback) {
      function getWidgetInstanceUrl() {
        function getQueryVariable(variable) {
            var query = window.location.search.substring(1);
            var vars = query.split('&');
            for (var i = 0; i < vars.length; i++) {
                var pair = vars[i].split('=');
                if (decodeURIComponent(pair[0]) == variable) {
                    return decodeURIComponent(pair[1]);
                }
            }
        }
        return getQueryVariable('url').split('?')[0];
      }

      var bla = openapp.param.get(getWidgetInstanceUrl());
      bla.getSubResources({
        relation: openapp.ns.role + "contextId",
        type: "ID",
        onAll: function(data) {
            if(data === null || data.length === 0){
                errorCallback();
            } else {
                data[0].getRepresentation("rdfjson",function(representation){
                    if(!representation){
                        errorCallback();
                    } else {
                        successCallback(representation);
                    }
                });
            }
        }
      });

    }

    /*
    bla.create({
      relation: openapp.ns.role + "contextId",
      type: "ID",
      representation: representation,
      callback: function(){
          deferred.resolve();
      }
    });
    */

  </script>

</body>
</html>

